<html>
    <head>
        <title>Product Homepage</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
      </head>
<body>
    <h2 align="center">List of all Products</h2>

  
 <div class="container" >
     <div class="" align="center" style="background-color: beige">
    <table border="1">
        <th>Productname</th>
        <th>Price</th>
        <th>SKU Code</th>
        <th>Model No</th>
        <th>DeliveryCharges</th>
        <th>Description</th>
        <th>Stock</th>
        <th>View Details</th>
        <% for(var i=0; i<products.length; i++) { %>
     <tr> 
         <td><%= products[i].productname %></td>
         <td><%= products[i].price %></td>
         <td><%= products[i].skucode %></td>
         <td><%= products[i].modelno %></td>
         <td><%= products[i].deliverycharges %></td>
         <td><%= products[i].description %></td>
         <td><%= products[i].stock %></td>
         <td> <a href="/api/products/<%= products[i].skucode %>"><button class="btn btn-success">View</button></a></td>
        
        </tr>
        <% } %>
    </table>    <br>

    <% for(var i=1; i<=pages; i++) { %>
        <a href="/api/products?page=<%= i %>"><button class="btn btn-info"><%= i %></button></a>
        <% } %>
    </div>
    <a href="/api/addnewproduct"><button class="btn btn-dark">Add new products</button></a> <br><br>
    
    </div>
</body>


</html>

